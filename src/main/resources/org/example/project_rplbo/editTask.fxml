<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="526.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.project_rplbo.EditTaskController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="29.0" layoutY="48.0" prefHeight="304.0" prefWidth="468.0">
            <children>
                <Label text="Ubah Tugas" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                    <padding>
                        <Insets top="10.0" />
                    </padding>
                </Label>
                <TextField fx:id="txtJudul" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="26.0" prefWidth="197.0" promptText="Masukkan Judul">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </TextField>
                <TextArea fx:id="txtIsi" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="200.0" prefWidth="297.0" promptText="Masukkan Isi">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </TextArea>
            <ChoiceBox fx:id="statusChoice" prefWidth="150.0">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </ChoiceBox>
                <DatePicker fx:id="txtTenggat" prefHeight="26.0" prefWidth="208.0" promptText="Masukkan Tenggat Waktu">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </DatePicker>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Button fx:id="btnSimpan" mnemonicParsing="false" onAction="#onSimpanClick" text="Simpan" />
                  <Button fx:id="btnBatal" mnemonicParsing="false" onAction="#onBatalClick" text="Batal" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
