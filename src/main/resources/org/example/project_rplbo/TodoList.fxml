<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.project_rplbo.TodoListController">
    <Button maxWidth="150" onAction="#handleAddTask" text="Tambah Tugas" />
   <TextField fx:id="searchBar" onAction="#searchFilter" promptText="Cari" />
    <ListView fx:id="taskListView" prefHeight="250" prefWidth="350" />
   <Button fx:id="btnRefresh" alignment="CENTER" mnemonicParsing="false" onAction="#onRefresh" text="Refresh" />
    <Button maxWidth="150" onAction="#handleRemoveTask" text="Hapus Tugas Terpilih" />
    <Label style="-fx-font-size: 10px; -fx-text-fill: gray;" text="* Klik dua kali tugas untuk mengedit tugas" />
</VBox>
