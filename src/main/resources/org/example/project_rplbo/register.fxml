<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="526.0" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.project_rplbo.RegisterController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Register" />

    <TextField fx:id="usernameField" maxWidth="250" promptText="Username" />
    <PasswordField fx:id="passwordField" maxWidth="250" promptText="Password" />
    <TextField fx:id="securityQuestionField" maxWidth="250" promptText="Pertanyaan Keamanan" />
    <TextField fx:id="securityAnswerField" maxWidth="250" promptText="Jawaban Keamanan" />

    <Button maxWidth="250" onAction="#handleRegister" text="Register" />

    <Label fx:id="messageLabel" style="-fx-text-fill: red;" />
    <Hyperlink onAction="#handleShowLogin" text="Sudah punya akun? Login" />

</VBox>
