<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.project_rplbo.RegisterController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Register" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <TextField fx:id="usernameField" promptText="Username" maxWidth="250"/>
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="250"/>
    <TextField fx:id="securityQuestionField" promptText="Pertanyaan Keamanan" maxWidth="250"/>
    <TextField fx:id="securityAnswerField" promptText="Jawaban Keamanan" maxWidth="250"/>

    <Button text="Register" onAction="#handleRegister" maxWidth="250"/>

    <Label fx:id="messageLabel" style="-fx-text-fill: red;"/>
    <Hyperlink text="Sudah punya akun? Login" onAction="#handleShowLogin"/>

</VBox>
